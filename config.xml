    <name>DEMO</name>

    <description>
       This is a ios Phonegap Application
	   </description>

    <author href="http://phonegap.io" email="dev@phonegap.apache.org">
        Apache Phonegap Team
    </author>

    <access origin="*"/>
  

    <!-- <content src="http://mysite.com/myapp.html" /> for external pages -->
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
